<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.giang.ql_thuchicanhan.ThietLap">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="Thiết lập"
        android:id="@+id/textView15"
        android:background="#1e91d3"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản đăng sử dụng"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:textColor="#070505"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hiển thị người đăng nhập"
        android:id="@+id/textView17"
        android:textSize="20dp"
        android:textColor="#070505"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi"
        android:id="@+id/buttonDoiTK"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngôn ngữ đang sử dụng"
        android:id="@+id/textView18"
        android:textSize="30dp"
        android:textColor="#070505"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hiển thị người đăng nhập"
        android:id="@+id/textView19"
        android:textSize="20dp"
        android:textColor="#070505"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi"
        android:id="@+id/buttonDoiNN"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19" />
</RelativeLayout>
