<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Tên khoản chi"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/editTaiKhoanChi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTaiKhoanChi"
        android:text="Từ tài khoản"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinnerTaiKhoanChi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerTaiKhoanChi"
        android:text="Số tiền chi"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editSTT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="number"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSTT"
        android:layout_marginTop="10dp"
        android:text="Ngày chi"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editNgayChi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/buttonDataChi"
        android:layout_toStartOf="@+id/buttonDataChi"
        android:ems="10"
        android:inputType="date"
        android:textSize="15dp" />

    <Button
        android:id="@+id/buttonDataChi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView7"
        android:text="Chọn" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_marginLeft="70dp"
        android:text="Thêm" />

    <Button
        android:id="@+id/buttonhuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/button"
        android:text="Hủy" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editNgayChi"
        android:text="Chi cho:"
        android:textColor="#040404"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView26"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText4"
        android:text="Ghi chú:"
        android:textColor="#040404"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView27"
        android:textSize="15dp" />
</RelativeLayout>