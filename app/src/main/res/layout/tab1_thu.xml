<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewSTT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editSTThu"
        android:layout_alignRight="@+id/editSTThu"
        android:layout_below="@+id/spTenKhoanThu"
        android:text="Số tiền thu"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editSTThu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnThem"
        android:layout_alignStart="@+id/btnThem"
        android:layout_below="@+id/textViewSTT"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewTenKhoanThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Mục thu"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spTenKhoanThu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSTT"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editSTT"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/textView28"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTaiKhoanChi"
        android:text="Vào tài khoản"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinnerTaiKhoanThu"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSTThu"
        android:layout_marginTop="10dp"
        android:text="Diễn giải"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtGhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewNgayThu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSTThu"
        android:layout_marginTop="10dp"
        android:text="Ngày thu"
        android:textColor="#0b1625"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNgayThu"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewNgayThu"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/buttonDataThu"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editNgayThu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editNgayThu"
            android:layout_toEndOf="@+id/editNgayThu"
            android:layout_toRightOf="@+id/editNgayThu"
            android:text="Chọn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editNgayThu"
            android:layout_centerHorizontal="true"
            android:text="Thêm" />
    </LinearLayout>

</LinearLayout>